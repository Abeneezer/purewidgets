<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:org.purewidgets.client.htmlwidgets">
	
	<ui:style>
	@external pwButton, pwButtonCaption, pwButtonReferencecode;

	.pwButton{
		padding: 0px;
		font-family: Verdana, Geneva, sans-serif;
		font-size: 2em;
		width:100%;
		/*width: 300px;
		height: 50px;*/

		border: 1px solid white;
		border-radius: 15px;
		
		display: inline-table;
		

		background:url(purewidgetsicons/button-background.gif);
		background-size:100% 100%;
		background-repeat:no-repeat;
	}

	.pwButtonCaption {
		text-align: left;
		padding-left: 10px;
		display: table-cell;
		vertical-align: middle;
	}

	.pwButtonReferencecode {
		display: table-cell;
		vertical-align: middle;
		text-align:right;
		padding-right: 10px;
	}	
	</ui:style>
	
	<p:ClickableHTMLPanel ui:field="uiVerticalPanelMain"  styleName="{style.pwButton}" > 
	    <g:InlineLabel ui:field="uiHTMLCaption"  styleName="{style.pwButtonCaption}"/> 
		<g:InlineLabel ui:field="uiHTMLReferenceCode"  styleName="{style.pwButtonReferencecode}"/>
	</p:ClickableHTMLPanel>
	
</ui:UiBinder> 