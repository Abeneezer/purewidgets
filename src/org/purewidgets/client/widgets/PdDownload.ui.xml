<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:org.purewidgets.client.htmlwidgets">
	
	<ui:style>
	@external pwDownload,  pwDownloadCaption, pwDownloadReferencecode, pwDownloadIcon;

	.pwDownload {
		font-family: Verdana, Geneva, sans-serif;
		font-size: 2em;
		height: 50px;
		width: 300px;

		padding: 2px 5px 5px 2px;

		/*
		border-left: 5px solid black;
		border-right: 5px solid black;
		border-bottom: 5px solid black; 
		*/
	}

	.pwDownloadCaption {

	}

	.pwDownloadReferencecode {
		margin-left: 5px;
	}	
	
	.pwDownloadIcon {
		width: 50px;
		height: 90%;
	}

	</ui:style>
	
	<p:ClickableHTMLPanel ui:field="uiVerticalPanelMain" styleName="{style.pwDownload}" > 
		<g:Image  url="purewidgetsicons/download-icon.jpg" styleName="{style.pwDownloadIcon}"/>
	    <g:InlineLabel ui:field="uiHTMLCaption"  styleName="{style.pwDownloadCaption}"/> 
		<g:InlineLabel ui:field="uiHTMLReferenceCode"  styleName="{style.pwDownloadReferencecode}"/>
	</p:ClickableHTMLPanel>
	
</ui:UiBinder> 