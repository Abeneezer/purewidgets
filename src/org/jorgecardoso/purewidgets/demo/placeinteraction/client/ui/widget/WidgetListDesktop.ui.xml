<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	.main {
		margin-left:auto;
		margin-right:auto;
		padding:5px 15px 5px 15px;
		/*border: 1px solid blue;*/
	}
	
	.titleBar {
		width:100%;
	}
	.icon  {
		width: 64px;
		height: 64px;
	}
	.title {
		font-size: 2em;
		margin-bottom:25px;
		margin-top:15px;
		text-align: center;
	}
	
	.widgetsPanel {
		width:100%;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.main}">
		<g:HorizontalPanel styleName="{style.titleBar}">
			<g:cell width="64px">
        		<g:Image styleName="{style.icon}" ui:field="applicationIcon"/> 
    		</g:cell>
    		<g:cell>
       			<g:HTML styleName="{style.title}"><b><span  ui:field="spanApplicationName"/></b> Application</g:HTML> 
    		</g:cell>
	 	</g:HorizontalPanel>
		
		<g:HTMLPanel ui:field="mainPanel"> 
			<g:TabPanel styleName="{style.widgetsPanel}" ui:field="tabPanel"> </g:TabPanel>
			<g:Label ui:field="labelNoWidgetFound"> No widgets found!</g:Label>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 