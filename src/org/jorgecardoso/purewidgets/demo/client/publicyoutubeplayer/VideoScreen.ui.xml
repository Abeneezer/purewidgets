<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:org.jorgecardoso.purewidgets.demo.client.publicyoutubeplayer"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">
	
	<ui:style src="css/ui.css" />

  
	<g:DeckPanel ui:field='deckPanelTop' styleName='all'>
		
		<g:SimplePanel ui:field='simplePanelPlayer' styleName='youtube'/>

	
		<g:HTMLPanel ui:field='htmlPanel'>
			<div id='top' class="{style.top}"></div>
				
			<g:DeckPanel ui:field='deckPanelBottom' styleName='{style.id-globalBottomPanel}'>
				<g:HorizontalPanel>
					<g:cell width="60%">
       					<p:RecentlyPlayed ui:field="recentlyPlayed" styleName='{style.id-recentlyplayed}' /> 
    				</g:cell>
    				<g:cell width="40%">
        				<p:ActivityStream ui:field="activityStream" styleName='{style.id-activityStream}'/>
    				</g:cell>
				</g:HorizontalPanel>
					
				<g:HTMLPanel>
					<div id='toplaynext'>
						<p:ToPlayNext ui:field='toPlayNext' />
					</div>					
				</g:HTMLPanel>
			</g:DeckPanel>
			
		</g:HTMLPanel>

	
		
	</g:DeckPanel>
</ui:UiBinder> 