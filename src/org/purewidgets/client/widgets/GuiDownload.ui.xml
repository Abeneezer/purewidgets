<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
	@external pw-download, pw-download-disabled, pw-download-caption, pw-download-referencecode, pw-download-icon;

	.pw-download {
		font-family: Verdana, Geneva, sans-serif;
		font-size: 2em;
		height: 50px;
		width: 300px;

		padding: 2px 5px 5px 2px;
		border-left: 5px solid black;
		border-right: 5px solid black;
		border-bottom: 5px solid black;

	}

	.pw-download-disabled {
		/*background: url("purewidgetsicons/hborder.png") repeat-x 0px -27px;*/
		color: graytext;
	}

	.pw-download-caption {

	}

	.pw-download-referencecode {
		margin-left: 5px;
	}	
	
	.pw-download-icon {
		width: 50px;
		height: 90%;
	}

	</ui:style>
	
	<g:HTMLPanel ui:field="uiVerticalPanelMain" styleName="{style.pw-download}" > 
	       <g:Image styleName="{style.pw-download-icon}" url="purewidgetsicons/download-icon.jpg"></g:Image>
	        	<g:InlineLabel ui:field="uiHTMLCaption"  styleName="{style.pw-download-caption}"/> 
				<g:InlineLabel ui:field="uiHTMLReferenceCode"  styleName="{style.pw-download-referencecode}"/>
	</g:HTMLPanel>
	
</ui:UiBinder> 