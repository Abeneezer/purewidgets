<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type='org.jorgecardoso.purewidgets.demo.placeinteraction.client.ui.ApplicationList.Style'>
		.inline {
			display:inline;
		}
		.list {
			font-size:1em;
			border:none;
			overflow:auto;
			width:100%;
			text-align:center;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="title"><b>Interact</b> with applications in <b><g:Label styleName="{style.inline}" ui:field="placeName"/></b>: </div> 
		<g:StackPanel ui:field="stackPanelApplications"/>
	</g:HTMLPanel>
</ui:UiBinder> 