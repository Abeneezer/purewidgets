	.pw-upload{
		font-family: Verdana, Geneva, sans-serif;
		font-size: 2em;
		height: 50px;
		width: 300px;
		/*
		padding: 2px 5px 5px 2px;
		border-left: 5px solid black;
		border-right: 5px solid black;
		border-bottom: 5px solid black;
		*/
	}

	.pw-upload-caption {

	}

	.pw-upload-referencecode {
		margin-left: 5px;
	}	
	
	.pw-upload-icon {
		width: 50px;
		height: 90%;
	}
	</ui:style>
	
	<g:HTMLPanel ui:field="uiVerticalPanelMain"  styleName="{style.pw-upload}" > 
		<g:Image url="purewidgetsicons/upload-icon.jpg" styleName="{style.pw-upload-icon}"/>
