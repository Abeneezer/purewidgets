<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:org.jorgecardoso.purewidgets.demo.placeinteraction.client.ui.login">
	<ui:style>

	.content {
		width: 100%;
		margin-left:auto;
		margin-right:auto;
		/*border:1px solid black;*/
		font-family: Verdana, Arial, Helvetica, sans-serif;
	}
	
	.loginBar {
		text-align:right;
		padding: 5px 10px 5px 0px;
		background-color: #C0C0C0;
		color: white;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.content}" ui:field="mainContent">
		<p:LoginUi styleName="{style.loginBar}" ui:field="loginUi"> </p:LoginUi>
		<g:HTMLPanel ui:field="features"> </g:HTMLPanel>
		
		
	</g:HTMLPanel>
</ui:UiBinder> 