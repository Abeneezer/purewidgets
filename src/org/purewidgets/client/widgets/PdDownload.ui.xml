<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:p="urn:import:org.purewidgets.client.htmlwidgets">
	
	<ui:style>
	@external pw-download,  pw-download-caption, pw-download-referencecode, pw-download-icon;

	.pw-download {
		font-family: Verdana, Geneva, sans-serif;
		font-size: 2em;
		height: 50px;
		width: 300px;

		padding: 2px 5px 5px 2px;

		/*
		border-left: 5px solid black;
		border-right: 5px solid black;
		border-bottom: 5px solid black; 
		*/
	}

	.pw-download-caption {

	}

	.pw-download-referencecode {
		margin-left: 5px;
	}	
	
	.pw-download-icon {
		width: 50px;
		height: 90%;
	}

	</ui:style>
	
	<p:ClickableHTMLPanel ui:field="uiVerticalPanelMain" styleName="{style.pw-download}" > 
		<g:Image  url="purewidgetsicons/download-icon.jpg" styleName="{style.pw-download-icon}"/>
	    <g:InlineLabel ui:field="uiHTMLCaption"  styleName="{style.pw-download-caption}"/> 
		<g:InlineLabel ui:field="uiHTMLReferenceCode"  styleName="{style.pw-download-referencecode}"/>
	</p:ClickableHTMLPanel>
	
</ui:UiBinder> 